<?php
	/* conexão com banco de dados */
	include("../../../conexao_db/conexaoTecnologia.php");
	
	// inicializo a sessão.
	if (!isset($_SESSION)) { session_start(); }
	
	// informações do servidor e banco de dados
	$usu_id       = $_SESSION['usu_id'];
	$dat_cad      = date('Y/m/d');
	$hora_cad     = date('G:i:s');
	
	$status       = $_POST['mdu_status'];	
	// com funções
	$nome         = trim(strtoupper($_POST['mdu_nome']));	
	
	$sql = "INSERT INTO modulo_usu (
							mdu_usuario_cad ,
							mdu_dat_cad ,
							mdu_hora_cad ,
							mdu_nome ,
							mdu_status
							)
					VALUES (
						'$usu_id', '$dat_cad', '$hora_cad', '$nome', '$status'
					);";			

	
	$result = @mysql_query($sql) or die($msg[2]);
	
	

	if($result){
		echo "<script>alert('Dados inseridos com sucesso')</script>";
		echo "<script>location.href='listar_mod_usu.php'</script>";
	} else{
		echo "<script>alert('Falha na inserção dos dados')</script>";
		echo "<script>location.href='cad_mod_usu.php';</script>";
	}
	
	// Libera um resultado da memória
	mysql_free_result($result);
?>