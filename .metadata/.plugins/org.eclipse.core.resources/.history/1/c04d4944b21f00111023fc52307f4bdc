<?php
	/* conexão com banco de dados */
	include("../../../conexao_db/conexaoTecnologia.php");
	
	// inicializo a sessão.
	if (!isset($_SESSION)) { session_start(); }
	
	if (isset($_GET['mdu_id'])){$mdu_id = $_GET['mdu_id'];}
	
	
	// informações do servidor e banco de dados
	$usu_id       = $_SESSION['usu_id'];
	$dat_cad      = date('Y/m/d');
	$hora_cad     = date('G:i:s');
	
	$status       = $_POST['mdu_status'];	
	// com funções
	$nome         = trim(strtoupper($_POST['mdu_nome']));		

	
	$sql = "UPDATE modulo_usu SET 
							mdu_usuario_cad = '$usu_id',
							mdu_dat_cad     = '$dat_cad',
							mdu_hora_cad    = '$hora_cad',
							mdu_nome        = '$nome',
							mdu_status      = '$status' 
				WHERE mdu_id = $mdu_id";	
				
	//print_r($sql);exit;

	$result = @mysql_query($sql) or die($msg[2]);
	
	if($result){
		echo "<script>alert('Dados alterados com sucesso')</script>";
		echo "<script>location.href='listar_mod_usu.php'</script>";
	} else{
		echo "<script>alert('Falha na alteração dos dados')</script>";
		echo "location.href='cad_mod_usu.php'";
	}
	
	// Libera um resultado da memória
	mysql_free_result($result);
?>