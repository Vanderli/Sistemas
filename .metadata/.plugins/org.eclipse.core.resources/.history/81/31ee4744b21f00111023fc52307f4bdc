	// informações do servidor e banco de dados
	$usu_id       = $_SESSION['usu_id'];
	$dat_cad      = date('Y/m/d');
	$hora_cad     = date('G:i:s');
	
	$lka_sec_id   = $_POST['lka_sec_id'];
	$lka_nome     = trim($_POST['lka_nome']);
	$lka_link     = trim($_POST['lka_link']);	
	$lka_status   = $_POST['lka_status'];	

	$sql = "INSERT INTO links_acesso(	lka_usu_id,
										lka_dat_cad,
										lka_hora_cad,
										lka_sec_id,
										lka_nome,
										lka_link,
										lka_status)
						VALUES ('$usu_id', 
								'$dat_cad', 
								'$hora_cad', 
								'$lka_sec_id', 
								'$lka_nome', 
								'$lka_link', 
								'$lka_status');";			

	//print_r($sql);exit;
	$result = mysql_query($sql) or die($msg[2]);

	if($result){
		echo "<script>alert('Dados inseridos com sucesso')</script>";
		echo "<script>location.href='listar_links_acesso.php'</script>";
	} 
	
	// Libera um resultado da memória
	mysql_free_result($result);
