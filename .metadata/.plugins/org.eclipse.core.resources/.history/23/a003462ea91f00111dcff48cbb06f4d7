	// informações do servidor e banco de dados
	$usu_id       = $_SESSION['usu_id'];
	$dat_cad      = date('Y/m/d');
	$hora_cad     = date('G:i:s');
	
	$lku_nome   = trim($_POST['lku_nome']);
	$lku_link   = trim($_POST['lku_link']);
	$lku_status = $_POST['lku_status'];	

	$sql = "INSERT INTO links_utilidades(	lku_usu_id,
										lku_dat_cad,
										lku_hora_cad,
										lku_nome,
										lku_link,
										lku_status)
						VALUES ('$usu_id', 
								'$dat_cad', 
								'$hora_cad', 
								'$lku_nome', 
								'$lku_link', 
								'$lku_status');";			

	//print_r($sql);exit;
	$result = mysql_query($sql) or die($msg[2]);

	if($result){
		echo "<script>alert('Dados inseridos com sucesso')</script>";
		echo "<script>location.href='listar_links_utilidades.php'</script>";
	} 
	
	// Libera um resultado da memória
	mysql_free_result($result);
