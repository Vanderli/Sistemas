        if (stristr($param, "pageNum_listaInscricoes") == false && 
        stristr($param, "totalRows_listaInscricoes") == false) {
        array_push($newParams, $param);
        }
        }
        if (count($newParams) != 0) {
        $queryString_listaInscricoes = "&" . htmlentities(implode("&", $newParams));
        }
