<?php 
	/* conexão com banco de dados */
	include("../../../conexao_db/conexaoTecnologia.php");
	
	// inicializo a sessão.
	if (!isset($_SESSION)) { session_start(); }
	
	// informações do servidor e banco de dados
	$usu_id       = $_SESSION['usu_id'];
	$dat_cad      = date('Y/m/d');
	$hora_cad     = date('G:i:s');
	
	$atr_sec_id   = $_POST['atr_sec_id'];	
	$atr_status   = $_POST['atr_status'];	
	$atr_titulo    = trim($_POST['atr_titulo']);
	$atr_desc      = trim($_POST['atr_desc']);
	

	$sql = "INSERT INTO atribuicao_sec(	atr_usu_id,
										atr_sec_id,
										atr_dat_cad,
										atr_hora_cad,
										atr_titulo,
										atr_desc,
										atr_status)
						VALUES ('$usu_id', 
								'$atr_sec_id', 
								'$dat_cad', 
								'$hora_cad', 
								'$atr_titulo', 
								'$atr_desc', 
								'$atr_status');";			

	$result = @mysql_query($sql) or die($msg[2]);

	if($result){
		echo "<script>alert('Dados inseridos com sucesso')</script>";
		echo "<script>location.href='listar_atribuicao_sec.php'</script>";
	}
	
	// Libera um resultado da memória
	mysql_free_result($result);
?>