<?
	function topo_rotativo(){
		# defino quantas imagens vão no topo rotativo
		$random_num = rand(1, 5);
		
		$random_topo[1] = "topo_rotativo/img_topo_rotativo/topo_1.jpg";
		$random_topo[2] = "topo_rotativo/img_topo_rotativo/topo_2.jpg";
		$random_topo[3] = "topo_rotativo/img_topo_rotativo/topo_3.jpg";
    $random_topo[4] = "topo_rotativo/img_topo_rotativo/topo_4.jpg";
    $random_topo[5] = "topo_rotativo/img_topo_rotativo/topo_5.jpg";	
		
		return($random_topo[$random_num]);
	 }
?>